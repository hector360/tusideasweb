        var socket = io();
        socket.on('connect', function(){
            console.log('conectando al servidor')
        })
    </script> -->
        <script>
            var ChatIdeasWeb = {};
            ChatIdeasWeb.ChatScripts = new ChatScripts();
            
        </script>
        
</head>
<body>
    <div class="contHeader">
        <div class="seccionLogo">
            <div class="contImagen">
                <img src="/img/nuevasimg/logo2.png" />
            </div>
        </div>
        <div class="seccionMenu">

        </div>
    </div>
    <div class="cont-abajo">
        <%- body %>
    </div>
    

  
</body>
</html>